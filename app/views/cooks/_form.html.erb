<style>
  textarea {width:760px;}
  input[type=text] {
    width:760px;
  }
  .control-label {
    float: left;
    width: 100px;
    padding-top: 5px;
    text-align: right;
  }
  .controls {
    margin-left: 120px;
    margin-bottom: 18px;
  }
</style>
<div class="well">
<%= form_for(@cook, :class=>"form-horizontal") do |f| %>
  <% if @cook.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cook.errors.count, "error") %> prohibited this cook from being saved:</h2>

      <ul>
      <% @cook.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label">Cookie</label>
    <div class="controls">
      <%= f.text_area :content, :cols => "100", :rows => "12" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">已过期</label>
    <div class="controls">
      <%= f.check_box :expired %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">访问频繁</label>
    <div class="controls">
      <%= f.check_box :frequent %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">拥有者</label>
    <div class="controls">
      <%= f.text_field :owner %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">帐号</label>
    <div class="controls">
      <%= f.text_field :username %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">密码</label>
    <div class="controls">
      <%= f.text_field :passwd %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Cookie类型</label>
    <div class="controls">
      <%= f.text_field :page_type %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">备注</label>
    <div class="controls">
      <%= f.text_area :remark, :cols => "100", :rows => "2" %>
    </div>
  </div>
  <div class="actions" style="text-align:center;">
    <input type="submit" class="btn-large btn-primary" >
  </div>
<% end %>
</div>
